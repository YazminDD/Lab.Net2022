@model List<EntityFramework.MVC.Models.ShippersView>

@{
    ViewBag.Title = "Shippers";

}

<h1>Shippers</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">ShipperID</th>
            <th scope="col">ShipperName</th>
            <th scope="col">ShipperPhone</th>
            <th scope="col">Editar</th>
            <th scope="col">Borrar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Shipper in Model)
        {
            <tr>
                <th scope="row">@Shipper.ShipperID</th>
                <td>@Shipper.ShipperName</td>
                <td>@Shipper.ShipperPhone</td>
                <td>@Html.ActionLink("Editar", "Edit", new { id = Shipper.ShipperID })</td>
                <td>@Html.ActionLink("Borrar", "Delete", new { id = Shipper.ShipperID }, new {onclick = "return confirm('¿Esta seguro de borrar?')"})</td>
            </tr>
         }
    </tbody>

</table>

<div>
    @Html.ActionLink("Agregar nuevo Shipper", "Create")
</div>
